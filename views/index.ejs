<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BOF</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8fafc;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header Section */
        header {
            background-color: #003087;
            color: #ffffff;
            padding: 20px;
            text-align: center;
        }

        header h1 {
            font-size: 2.5rem;
            margin: 0;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(to bottom right, #0066cc, #004a99);
            color: white;
            padding: 60px 20px;
            text-align: center;
        }

        .hero h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .hero .btn {
            background-color: #ffcc00;
            color: #003087;
            padding: 12px 20px;
            font-size: 1.1rem;
            font-weight: bold;
            text-transform: uppercase;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .hero .btn:hover {
            background-color: #ffdd33;
        }

        /* Stock and Crypto Section */
        .data-section {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 40px 20px;
            background-color: #f9f9f9;
        }

        .data-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            width: 300px;
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .data-card:hover {
            transform: scale(1.05);
        }

        .data-card h3 {
            font-size: 1.8rem;
            margin-bottom: 10px;
            color: #333;
        }

        .data-card p {
            font-size: 1.1rem;
            margin-bottom: 10px;
            color: #555;
        }

        .data-card .price {
            font-size: 1.5rem;
            font-weight: bold;
            color: #48bb78;
        }
         /* Information Section */
         .info-section {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 40px 20px;
            gap: 20px;
        }
        .info-card {
            background-color: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
            flex: 1;
            max-width: 300px;
        }

        .info-card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .info-card p {
            font-size: 1rem;
            line-height: 1.5;
        }

        /* Footer */
        footer {
            background-color: #003087;
            color: white;
            text-align: center;
            padding: 10px;
            margin-top: auto;
        }

        footer p {
            margin: 0;
            font-size: 0.9rem;
        }
        .google-button {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            color: #fff;
            background-color: #138d44;
            border: none;
            margin-top: 20px;
          }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header>
        <h1>Bank of Arya</h1>
        <a href="/auth/google" class="google-button">Login with Google</a>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <h2>Open Your Account Today</h2>
        <p>Join us and enjoy seamless banking solutions for a brighter financial future.</p>
        <a href="/register-page" class="btn">Get Start</a>
    </section>

     <!-- Information Section -->
     <section class="info-section">
        <div class="info-card">
            <h3>Better Banking</h3>
            <p>Explore our wide range of banking products tailored to your needs.</p>
        </div>
        <div class="info-card">
            <h3>Customer Service</h3>
            <p>We are here to help 24/7 with all your banking queries and needs.</p>
        </div>
        <div class="info-card">
            <h3>Discover Convenience</h3>
            <p>Manage your accounts effortlessly with our online banking solutions.</p>
        </div>
    </section>

    <!-- Live Data Section -->
    <section class="data-section">
        <!-- Live Stock Prices -->
        <div class="data-card">
            <h3>Apple (AAPL)</h3>
            <p>Live Stock Price</p>
            <span class="price" id="stock-price-aapl">Loading...</span>
        </div>
        <div class="data-card">
            <h3>Microsoft (MSFT)</h3>
            <p>Live Stock Price</p>
            <span class="price" id="stock-price-msft">Loading...</span>
        </div>
        <div class="data-card">
            <h3>Google (GOOGL)</h3>
            <p>Live Stock Price</p>
            <span class="price" id="stock-price-googl">Loading...</span>
        </div>

        <!-- Live Crypto Prices -->
        <div class="data-card">
            <h3>Bitcoin (BTC/USD)</h3>
            <p>Live Crypto Price</p>
            <span class="price" id="crypto-price">Loading...</span>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Bank of Arya. All rights reserved.</p>
    </footer>

    <script>
        // Fetch stock prices
        const stockSymbols = ["AAPL", "MSFT", "GOOGL"];
        const cryptoSymbol = "BTC";

        async function fetchStockPrices() {
            for (const symbol of stockSymbols) {
                try {
                    const response = await fetch(`https://www.alphavantage.co/query?function=GLOBAL_QUOTE&symbol=${symbol}&apikey=demo`);
                    const data = await response.json();
                    const stockPrice = data["Global Quote"]["05. price"];
                    document.getElementById(`stock-price-${symbol.toLowerCase()}`).textContent = `$${parseFloat(stockPrice).toFixed(2)}`;
                } catch (error) {
                    document.getElementById(`stock-price-${symbol.toLowerCase()}`).textContent = "Error fetching data";
                }
            }
        }

        async function fetchCryptoPrice() {
            try {
                const response = await fetch(`https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd`);
                const data = await response.json();
                const cryptoPrice = data.bitcoin.usd;
                document.getElementById("crypto-price").textContent = `$${parseFloat(cryptoPrice).toFixed(2)}`;
            } catch (error) {
                document.getElementById("crypto-price").textContent = "Error fetching data";
            }
        }

        fetchStockPrices();
        fetchCryptoPrice();
        setInterval(fetchStockPrices, 60000);
        setInterval(fetchCryptoPrice, 60000);
    </script>
</body>
</html>
